<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/user_status"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        android:padding="4dp">

        <FrameLayout
            android:id="@+id/user_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:elevation="4dp">

            <com.mikhaellopez.circularimageview.CircularImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/me" />

            <TextView
                android:id="@+id/unread_messages"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_gravity="bottom|end"
                android:background="@drawable/green_circle_bg"
                android:gravity="center_vertical|center_horizontal"
                android:text="+"
                android:textColor="@android:color/white"
                android:textSize="18sp" />
        </FrameLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_toEndOf="@id/user_image">

            <TextView
                android:id="@+id/my_status"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif"
                android:gravity="top"
                android:text="My Status"
                android:textColor="@android:color/black"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/latest_message"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/my_status"
                android:layout_toEndOf="@id/tick"
                android:text="Tap to add my status"
                android:textColor="@color/colorSmallText"
                android:textSize="14sp"
                android:textStyle="normal" />

        </RelativeLayout>
    </RelativeLayout>

    <TextView
        android:id="@+id/recent_updates"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/user_status"
        android:background="#f4f4f4"
        android:paddingBottom="2dp"
        android:paddingEnd="12dp"
        android:paddingStart="12dp"
        android:paddingTop="2dp"
        android:text="Recent updates"
        android:textColor="#747474"
        android:textSize="14sp"
        android:textStyle="normal" />

    <android.support.v7.widget.RecyclerView
        android:layout_below="@id/recent_updates"
        android:id="@+id/status_rv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


    </android.support.v7.widget.RecyclerView>


</RelativeLayout>